<h1 class="mb-1 restaurant-show-title">編輯{{restaurantsData.name}}</h1>
<div class="container">
  <form action="/restaurant/{{restaurantsData._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名</label>
      <input type="text" class="form-control" id="name" placeholder="" name="name" value="{{restaurantsData.name}}"
        required />
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名</label>
      <input type="text" class="form-control" id="name_en" placeholder="" name="name_en"
        value="{{restaurantsData.name_en}}" required />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label"><i class="fas fa-utensils pr-2"></i>分類</label>
      <input type="text" class="form-control" id="category" placeholder="" list="categoryOptions" name="category"
        value="{{restaurantsData.category}}" required />
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結</label>
      <input type="url" class="form-control" id="image" name="image" value="{{restaurantsData.image}}" required />
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" placeholder="" name="location"
        value="{{restaurantsData.location}}" required />
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="tel" class="form-control" id="phone" placeholder="" name="phone" value="{{restaurantsData.phone}}"
        required />
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google地圖連結</label>
      <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurantsData.google_map}}"
        required />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分</label>
      <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating"
        value="{{restaurantsData.rating}}" required />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述</label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required>{{restaurantsData.description}}</textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-outline-secondary">
        Save
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          Back
        </button>
      </a>
    </div>
  </form>
</div>