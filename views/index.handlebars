<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">搜尋餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱 or 分類..."
            aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
</div>

<div>
  <div class="text-right btn-group">
    <a href="./restaurant/new">
      {{#each restaurant}}
      <li>
        {{this.name}}
      </li>
      {{/each}}
      <button class="btn btn-warning">新增餐廳</button>
    </a>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-group">
        {{#each restaurantsData}}
        <div class="col-md-4 p-2">
          <a href="/restaurant/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <div>
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              </div>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2 p-1"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill bg-danger">
                  {{this.rating}} <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="card-footer d-flex justify-content-end flex-wrap">
                <a href="/restaurant/{{this._id}}/edit"><button class="btn btn-info">Edit</button></a>
                <a href="/restaurant/{{this._id}}"><button class="btn btn-info">Details</button></a>
                <form action="/restaurant/{{this._id}}?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">delete</button>
                </form>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>