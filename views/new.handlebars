<div class="container">
  <form action="/restaurant" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">店名</label>
      <input type="text" class="form-control" id="name" placeholder="" name="name">
    </div>



    <div class="mb-3">
      <label for="category" class="form-label">分類</label>
      <input type="text" class="form-control" id="category" placeholder="" list="categoryOptions" name="category">
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="mb-3">
      <label for="name_en" class="form-label">英文店名</label>
      <input type="text" class="form-control" id="name_en" placeholder="" name="name_en">
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">圖片連結</label>
      <input type="url" class="form-control" id="image" name="image">
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" id="location" placeholder="" name="location">
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="tel" class="form-control" id="phone" placeholder="" name="phone">
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">Google地圖連結</label>
      <input type="url" class="form-control" id="google_map" name="google_map">
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">評分</label>
      <input type="number" class="form-control" id="rating" min="0" max="5.0" step="0.1" name="rating">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">敘述</label>
      <textarea class="form-control" id="description" rows="3" name="description"></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-outline-secondary"> 新增餐廳 </button>
      <a href="/"> <button type="button" class="btn btn-outline-secondary"> 返回首頁 </button>
      </a>
    </div>
  </form>
</div>